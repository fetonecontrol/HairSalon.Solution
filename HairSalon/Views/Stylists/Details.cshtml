@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Stylist;


<h2>Clients currently booked with</h2>
<h3>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName):</h3>
<hr />

<ul>
@if (@Model.Clients.Count == 0)
{
  <p>This stylist has no current bookings</p>
}

@foreach (Client client in Model.Clients)
{
  <li>@client.FirstName @client.LastName</li>
}
</ul>
<input type="button" class="btn btn-outline-info" value="Book with This Stylist" onclick="location.href='@Url.Action("Create", "Clients")'" />
<input type="button" class="btn btn-outline-info" value="Edit This Profile" onclick="location.href='@Url.Action("Edit", "Stylists")'" />
<input type="button" class="btn btn-outline-info" value="Delete This Profile" onclick="location.href='@Url.Action("Delete", "Stylists")'" />

