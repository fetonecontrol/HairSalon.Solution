@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Available Stylists:</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists Currently Work Here</h3>
} 

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.FirstName}", "Details", new { id = stylist.StylistId })</li>
}
<input type="button" class="btn btn-outline-info" value="Sign Up as a Stylist!" onclick="location.href='@Url.Action("Create", "Stylists")'" />
<input type="button" class="btn btn-outline-info" value="Home" onclick="location.href='@Url.Action("Index", "Home")'" />
