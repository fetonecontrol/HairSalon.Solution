@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added yet!</h3>
} 

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.FirstName}", "Details", new { id = client.Id }) | @client.StylistId</li>
}
<input type="button" class="btn btn-outline-info" value="Book an Appointment!" onclick="location.href='@Url.Action("Create", "Clients")'" />
