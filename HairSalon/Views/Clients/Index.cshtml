@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h2>Clients</h2>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added yet!</h3>
} 
@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.FirstName}", "Details", new { id = client.Id }) | Stylist for this client:<b> @client.Stylist.FirstName</b></li>
}